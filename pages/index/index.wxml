<!--index.wxml-->
<view class="container">
    <view class="list-header">
        <text>课程列表</text>
        <switch checked="{{ isHighlight }}" bindchange="onHightlightChange"></switch>
    </view>
    <view class="list-group">
        <view class="list-group-item" wx:for="{{ classes }}" wx:key="index">
            <view class="header">
                <text class="title" style="color: {{(item.price / 100<75)?color1:color2}}">{{ item.name }}</text>
                <text class="price">{{ item.price / 100 }} 元</text>
            </view>
            <text class="desc">{{ item.description }}</text>
        </view>
    </view>
    <view class="pagination" wx:if="{{show}}">总页数 {{ totalPage }}  当前页数 {{ curPage }}</view>
    <picker class="picker" wx:if="{{show}}" value="{{ pageSize }}" range="{{ pageSizeArray }}" bindchange="onPageSizeChange">
        每页 {{ pageSize }} 条数据
    </picker>
    <view class="buttons" wx:if="{{show}}">
        <button disabled="{{disabledPreBut}}" bindtap="onPrevTap">上一页</button>
        <button disabled="{{disabledNexBut}}" bindtap="onNextTap">下一页</button>
    </view>
</view>
